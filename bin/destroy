#!/usr/bin/env bash

set -ea

. ./lib/cli/utils.sh

CMD_USAGE="Destroy Dash Network

Usage: destroy [options] <network_name>

Options:
  -k --keep-infrastructure - Destroy Dash Network and keep infrastructure
  -p --destroy-platform    - Destroy Dash Platform only and keep core
  -h --help                - Show help"

for i in "$@"
do
case ${i} in
    -k|--keep-infrastructure)
    KEEP_INFRASTRUCTURE=1
    ;;
    -p|--keep-platform)
    DESTROY_PLATFORM=1
    ;;
    -h|--help)
        echo "$CMD_USAGE"
        exit 0
    ;;
    *)
    NETWORK_NAME="${i#*=}"
    ;;
esac
done

. ./lib/cli/init.sh
. ./lib/cli/terraform.sh
. ./lib/cli/ansible.sh

echo "Destroying $NETWORK_NAME network...";

if ! [ -z ${KEEP_INFRASTRUCTURE} ]; then
    echo "Removing software and configuration and keeping infrastructure..."
    ansible_run_playbook "destroy.yml --extra-vars target=network"
elif ! [ -z ${DESTROY_PLATFORM} ]; then
    echo "Destroying platform and keeping core..."
    ansible_run_playbook "destroy.yml --extra-vars target=platform"
else
    terraform_run_command "destroy"
    rm "networks/$NETWORK_NAME.inventory"
fi
