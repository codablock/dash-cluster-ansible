static_resources:
  listeners:
  - name: listener_0
    address:
      socket_address: { address: 0.0.0.0, port_value: 8080 }
    filter_chains:
    - filters:
      - name: envoy.http_connection_manager
        config:
          codec_type: auto
          stat_prefix: ingress_http
          route_config:
            name: local_route
            virtual_hosts:
            - name: dapi_services
              domains: ["*"]
              routes:
              - match: { prefix: "/org.dash.platform.dapi.v0.Core/subscribeToTransactionsWithProofs" }
                route:
                  cluster: core_streams
                  max_grpc_timeout: 0s
              - match: { prefix: "/org.dash.platform.dapi.v0.Core/subscribeToBlockHeadersWithChainLocks" }
                route:
                  cluster: core_streams
                  max_grpc_timeout: 0s
              - match: { prefix: "/org.dash.platform.dapi.v0.Core" }
                route:
                  cluster: api
                  max_grpc_timeout: 0s
              - match: { prefix: "/org.dash.platform.dapi.v0.Platform" }
                route:
                  cluster: api
                  max_grpc_timeout: 0s
              - match: { prefix: "/grpc.health.v1.Health" }
                route:
                  cluster: core_streams
                  max_grpc_timeout: 0s
          http_filters:
          - name: envoy.grpc_web
          - name: envoy.router
  clusters:
  - name: api
    connect_timeout: 0.25s
    type: logical_dns
    http2_protocol_options: {}
    lb_policy: round_robin
    hosts: [{ socket_address: { address: {{ private_ip }}, port_value: 3005 }}]
  - name: core_streams
    connect_timeout: 0.25s
    type: logical_dns
    http2_protocol_options: {}
    lb_policy: round_robin
    hosts: [{ socket_address: { address: {{ private_ip }}, port_value: 3006 }}]
